<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_todaybeans"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_128"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#FFFFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_todaybean"
            android:layout_width="@dimen/dp_88"
            android:scaleType="fitXY"
            android:layout_height="@dimen/dp_122"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:src="@color/red" />

        <TextView
            android:id="@+id/text_databeans"
            android:layout_width="@dimen/dp_228"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/sp_16"
            android:layout_toRightOf="@id/iv_todaybean"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="新一代信息技术与企业数字化的转型"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/text_namebeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_databeans"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/iv_todaybean"
            android:text="姚乐"
            android:textColor="#FF7A81A3"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/text_gsbeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_databeans"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_8"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/text_namebeans"
            android:text="CIO时代学院院长"
            android:textColor="#FF9CA0B5"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/text_timebeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_gsbeans"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_toRightOf="@id/iv_todaybean"
            android:text="培训课程"
            android:textColor="#FFD7AB70"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/text_watchtimebeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_gsbeans"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_toRightOf="@id/text_timebeans"
            android:text="观看至 04分25秒"
            android:textColor="#FF9CA0B5"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>