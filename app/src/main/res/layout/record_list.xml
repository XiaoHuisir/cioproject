<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_15">

    <ImageView
        android:id="@+id/img_icons"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_112"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/img_icons"
        app:layout_constraintBottom_toBottomOf="@id/img_icons"
        app:layout_constraintLeft_toRightOf="@id/img_icons"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_10">

        <TextView
            android:id="@+id/txt_titles"
            android:layout_width="@dimen/dp_128"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize = "end"
            android:text="新一代信息技术与企业数字化的转型"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:id="@+id/txt_times"
            android:layout_below="@id/txt_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="观看至 04分25秒"
            android:textColor="#FF9CA0B5"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
