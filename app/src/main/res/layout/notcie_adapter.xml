    <LinearLayout
        android:id="@+id/lin_not"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_notcie"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_80"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@mipmap/pic_default"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_xinx"
                android:layout_width="@dimen/dp_252"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_toRightOf="@id/image_notcie"
                android:text="新一代信息技术与企业数字化的转型"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/txt_notname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_xinx"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_toRightOf="@id/image_notcie"
                android:text="培训课程"
                android:textColor="#FFD7AB70"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_nottiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_xinx"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_toRightOf="@id/txt_notname"
                android:text="累计学习：124分钟03秒"
                android:textColor="#FF9CA0B5"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_tong"
        android:layout_width="@dimen/dp_328"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#FFFAFAFA">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="测试成绩："
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/txt_fraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="72分"
            android:textColor="#FFEB2121"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/txt_tong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="未通过"
            android:textColor="#FFEB2121"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
