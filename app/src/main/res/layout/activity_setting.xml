<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFAFA"
    tools:context=".ui.acivity.setting.SettingActivity">
    <RelativeLayout
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#E6FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/back_black" />

        <TextView
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_20"
            android:text="账号设置"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/setting_back"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="#FF212121"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/whites"
        app:layout_constraintTop_toBottomOf="@+id/tb">

        <TextView
            android:id="@+id/txt_hander"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="头像"
            android:textColor="#FF000000"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/pic_default"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_arrow_avtar"
           />

        <ImageView
            android:id="@+id/img_arrow_avtar"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/item_arrows" />
    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_328"
        android:layout_height="@dimen/dp_1"
        android:background="#FFF5F5F5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl1" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_1"
        android:background="#FFFFFFFF"
        app:layout_constraintTop_toBottomOf="@id/rl1">

        <TextView
            android:id="@+id/txt_monicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="姓名"
            android:textColor="#FF000000"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/txt_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_arrow_name"
            android:text="张宣"
            android:textColor="#FF666666"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/img_arrow_name"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/item_arrows" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_data"
        android:layout_width="@dimen/dp_343"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:text="国家信息中心信息资源开发部开发处"
        android:textColor="#FF9CA0B5"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl2" />

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#FFFFFFFF"
        app:layout_constraintTop_toBottomOf="@id/txt_data">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="职务"
            android:textColor="#FF000000"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/txt_zwName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_arrow_zw"
            android:text="处长"
            android:textColor="#FF666666"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/img_arrow_zw"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/item_arrows" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/txt_logout"
        android:layout_width="@dimen/dp_328"
        android:layout_height="@dimen/dp_48"
        android:text="退出登录"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_46"
        android:padding="@dimen/dp_14"
        android:textSize="@dimen/sp_16"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl3"
        android:background="#FFFFFFFF"
        >
        <TextView
            android:layout_width="64dp"

            android:layout_height="@dimen/dp_20"
            android:text="退出登录"
            android:textColor="#FFEB2121"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>
    <!--<TextView-->
        <!--android:id="@+id/txt_logout"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/dp_46"-->
        <!--android:padding="@dimen/dp_14"-->
        <!--android:text="退出登录"-->
        <!--android:textColor="#FFEB2121"-->
        <!--android:textSize="@dimen/sp_16"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@id/rl3" />-->
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>